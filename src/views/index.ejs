 <script>
    document.addEventListener('DOMContentLoaded', async () => {
        const tonConnectUI = new TON_CONNECT_UI.TonConnectUI({
            manifestUrl: 'https://pastebin.com/raw/swi6Dwxq',
            buttonRootId: 'ton-connect'
        });
   
        const launchBtn = document.getElementById('launchAppBtn');
   
        tonConnectUI.onStatusChange(async (wallet) => {
            if (wallet) {
                try {
                    const response = await fetch('/auth/wallet', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            walletAddress: wallet.account.address,
                            referralCode: new URLSearchParams(window.location.search).get('ref')
                        })
                    });
   
                    const data = await response.json();
                    if (data.token) {
                        localStorage.setItem('auth_token', data.token);
                        launchBtn.classList.remove('hidden');
                    }
                } catch (error) {
                    console.error('Auth error:', error);
                }
            } else {
                localStorage.removeItem('auth_token');
                launchBtn.classList.add('hidden');
            }
        });
   
        // Check if already connected
        const token = localStorage.getItem('auth_token');
        if (token) {
            launchBtn.classList.remove('hidden');
        }

        // Tambahkan setup event listeners
        setupWalletEventListeners();
    });

    // Fungsi untuk setup event listeners wallet
    function setupWalletEventListeners() {
        window.addEventListener('ton-connect-ui-connection-lost', (event) => {
            console.log('Connection lost:', event.detail);
            localStorage.removeItem('auth_token');
            const launchBtn = document.getElementById('launchAppBtn');
            launchBtn.classList.add('hidden');
        });

        window.addEventListener('ton-connect-ui-connection-error', (event) => {
            console.log('Connection error:', event.detail);
            localStorage.removeItem('auth_token');
            const launchBtn = document.getElementById('launchAppBtn');
            launchBtn.classList.add('hidden');
        });
    }
</script>
